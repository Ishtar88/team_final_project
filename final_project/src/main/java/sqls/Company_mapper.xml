<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.jsr.project.company">

	<resultMap type="com.jsr.project.dtos.CompanyDto" id="CompanyDto">
		<result property="b_seq" column="B_SEQ" />
		<result property="b_name" column="B_NAME" />
		<result property="b_num" column="B_NUM" />
		<result property="b_address" column="B_ADDRESS" />
		<result property="b_tel" column="B_TEL" />
		<result property="b_regDate" column="B_REGDATE" />
		<result property="deal" column="DEAL" />
	</resultMap>

	<select id="getAllCompany" resultType="CompanyDto">
		SELECT B_SEQ, B_NAME,
		B_NUM, B_ADDRESS, B_TEL, B_REGDATE,DEAL FROM COMPANY
	</select>

	<update id="updateCompany" parameterType="CompanyDto">
		UPDATE COMPANY SET
		B_NAME=#{b_name},B_NUM=#{b_num},DEAL=#{deal},B_ADDRESS=
		<choose>
			<when test="b_address!=null">
				#{b_address}
			</when>
			<otherwise>
				null
			</otherwise>
		</choose>
		,B_TEL=
		<choose>
			<when test="b_tel!=null">
				#{b_tel}
			</when>
			<otherwise>
				null
			</otherwise>
		</choose>
		WHERE B_SEQ=#{b_seq}
	</update>

	<insert id="insertCompany" parameterType="CompanyDto">
		INSERT INTO COMPANY (B_SEQ,B_NAME,B_NUM,B_ADDRESS,B_TEL,B_REGDATE,DEAL)
		VALUES (COMPANY_SEQ.NEXTVAL,#{b_name},#{b_num},#{b_address},#{b_tel},SYSDATE,'Y')
	</insert>

</mapper>